<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyNotes" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/warm</item>
        <item name="colorSecondaryVariant">@color/warm</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="textAppearanceButton">@style/TextAppearance.AppCompat.Button</item>
        <item name="shapeAppearance">@style/ShapeAppearance.MaterialComponents.SmallComponent</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="my_dialog_theme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorAccent">@color/color2</item>
        <item name="colorSecondary">@color/color2</item>
        <item name="colorPrimary">@color/color2</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>

    <style name="datepicker_theme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowBackground">@color/background</item>
        <item name="android:colorAccent">@color/color2</item>
        <item name="colorSecondary">@color/color2</item>
        <item name="colorPrimary">@color/color2</item>
    </style>

    <style name="MyTheme1" parent="@style/Theme.AppCompat">
<!--        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>-->
<!--        <item name="android:windowLightStatusBar">true</item>-->
        <item name="shapeAppearance">@style/ShapeAppearance.MaterialComponents.SmallComponent</item>
    </style>
    <style name="MyTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyTheme.ActionBarStyle</item>
        <item name="shapeAppearance">@style/ShapeAppearance.MaterialComponents.SmallComponent</item>
    </style>

    <style name="MyTheme.ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
        <item name="shapeAppearance">@style/ShapeAppearance.MaterialComponents.SmallComponent</item>
    </style>

    <style name="MyTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/black</item>
        <item name="shapeAppearance">@style/ShapeAppearance.MaterialComponents.SmallComponent</item>
    </style>

    <style name="Theme.MyNotes.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="actionBarTheme">@style/Theme.MyNotes</item>
        <item name="shapeAppearance">@style/ShapeAppearance.MaterialComponents.SmallComponent</item>

    </style>

    <style name="Theme.MyNotes.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyNotes.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextAppearance.AppCompat." parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/convergence</item>
    </style>


</resources>